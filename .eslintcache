  const addEffects = () =>{\r\n        // `current` points to the mounted div (card className) element\r\n        cardRef.current.classList.add(\"effect\");\r\n    }\r\n\r\n    //intended to remove effects from the card \r\n    const removeEffects = () => {\r\n        // `current` points to the mounted div (card className) element\r\n        cardRef.current.classList.remove(\"effect\");\r\n    }\r\n\r\n    return (\r\n        <div className=\"card\" ref={cardRef}>\r\n            <div className=\"card-body\">\r\n                <div className=\"card-title text-truncate\">\r\n                    <i className=\"fas fa-music\"></i>{name}<i className=\"fas fa-music\"></i>\r\n                </div>\r\n                    {statusPad ?\r\n                        <button className=\"btn btn-warning\" onClick={()=>{setStatusPad(false)}}>ON</button>\r\n                        :\r\n                        <button className=\"btn btn-dark\" onClick={()=>{setStatusPad(true)}}>OFF</button>\r\n                    }\r\n            </div>\r\n        </div>\r\n    );\r\n}\r\n\r\nexport default Pad;","C:\\Users\\ypshi\\OneDrive\\שולחן העבודה\\loop-machine\\src\\assets\\samples.js",[],{"ruleId":"31","replacedBy":"32"},{"ruleId":"33","replacedBy":"34"},{"ruleId":"35","severity":1,"message":"36","line":33,"column":8,"nodeType":"37","endLine":33,"endColumn":30,"suggestions":"38"},"no-native-reassign",["39"],"no-negated-in-lhs",["40"],"react-hooks/exhaustive-deps","React Hook useEffect has a missing dependency: 'sample'. Either include it or remove the dependency array.","ArrayExpression",["41"],"no-global-assign","no-unsafe-negation",{"desc":"42","fix":"43"},"Update the dependencies array to be: [statusPad, playButton, sample]",{"range":"44","text":"45"},[1668,1690],"[statusPad, playButton, sample]"]